        "@hono/zod-validator": "^0.4.3",
        "@prisma/client": "^5.7.0",
        "bcrypt": "^5.1.1",
        "dotenv": "^16.4.7",
        "hono": "^4.0.0",
        "jsonwebtoken": "^9.0.2",
        "openapi3-ts": "^4.4.0",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@types/bcrypt": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^20.9.0",
        "prisma": "^5.7.0",
        "tsx": "^3.12.7",
        "typescript": "^5.2.2",
        "vitest": "^0.34.4"

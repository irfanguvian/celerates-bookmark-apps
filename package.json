{
    "name": "hono-backend-starter",
    "version": "1.0.0",
    "description": "A starter repository for building backend applications with Hono.js and TypeScript",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
